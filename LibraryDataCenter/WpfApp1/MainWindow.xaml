<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:WpfApp1.ViewModels"
        Title="Library Catalog" Height="500" Width="800">
    <Window.DataContext>
        <vm:CatalogViewModel />
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>

        <!-- Top Buttons -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Add" Command="{Binding AddCatalogCommand}" Margin="0,0,10,0" />
            <Button Content="Delete" Command="{Binding DeleteCatalogCommand}" />
        </StackPanel>

        <!-- Editable DataGrid -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Catalogs}"
                  SelectedItem="{Binding SelectedCatalog, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  IsReadOnly="False"
                  CanUserAddRows="False"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding CatalogId}" IsReadOnly="True" />
                <DataGridTextColumn Header="Title" Binding="{Binding Title, UpdateSourceTrigger=PropertyChanged}" />
                <DataGridTextColumn Header="Author" Binding="{Binding Author, UpdateSourceTrigger=PropertyChanged}" />
                <DataGridTextColumn Header="Pages" Binding="{Binding NrOfPages, UpdateSourceTrigger=PropertyChanged}" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Master-Detail Panel -->
        <GroupBox Header="Details" Grid.Row="2" Padding="10">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Title:" Width="100" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding SelectedCatalog.Title, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Author:" Width="100" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding SelectedCatalog.Author, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Pages:" Width="100" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding SelectedCatalog.NrOfPages, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
