<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:WpfApp1.ViewModels"
        Title="Library" Height="400" Width="700">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Master View -->
        <DataGrid ItemsSource="{Binding Catalogs}" 
                  SelectedItem="{Binding SelectedCatalog}" 
                  AutoGenerateColumns="False"
                  Grid.Column="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding CatalogId}" />
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Detail View -->
        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="Title" FontWeight="Bold"/>
            <TextBox Text="{Binding SelectedCatalog.Title, Mode=TwoWay}" Margin="0 5"/>

            <TextBlock Text="Author" FontWeight="Bold"/>
            <TextBox Text="{Binding SelectedCatalog.Author, Mode=TwoWay}" Margin="0 5"/>

            <TextBlock Text="Pages" FontWeight="Bold"/>
            <TextBox Text="{Binding SelectedCatalog.NrOfPages, Mode=TwoWay}" Margin="0 5"/>

            <Button Content="Add Catalog" Command="{Binding AddCatalogCommand}" Margin="0 5"/>
            <Button Content="Delete Catalog" Command="{Binding DeleteCatalogCommand}" Margin="0 5"/>
        </StackPanel>
    </Grid>
</Window>
