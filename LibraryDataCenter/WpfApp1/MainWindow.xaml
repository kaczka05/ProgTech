<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:WpfApp1.ViewModels"
        Title="Library Catalog" Height="450" Width="800">
    <Window.DataContext>
        <vm:CatalogViewModel />
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Add" Command="{Binding AddCatalogCommand}" Margin="0,0,10,0" />
            <Button Content="Delete" Command="{Binding DeleteCatalogCommand}" />
        </StackPanel>
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Catalogs}"
                  SelectedItem="{Binding SelectedCatalog}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding CatalogId}" />
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" />
                <DataGridTextColumn Header="Author" Binding="{Binding Author}" />
                <DataGridTextColumn Header="Pages" Binding="{Binding NrOfPages}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
